<?xml version="1.0" encoding="utf-8"?>
<legs:GlowButtonLegs xmlns:legs="com.mconnects.main.view.components.GlowButton.*"
					 xmlns:fx="http://ns.adobe.com/mxml/2009"
					 xmlns:mx="library://ns.adobe.com/flex/mx"
					 cornerRadius="10"
					 borderStyle="solid"
					 backgroundColor="#FFFFFF"
					 backgroundAlpha="0.25"
					 paddingLeft="5"
					 paddingBottom="1"
					 paddingRight="5"
					 paddingTop="1"
					 height="25"
					 horizontalAlign="center"
					 verticalAlign="middle"
					 mouseOver="highlight(true)"
					 mouseOut="highlight(false)"
					 buttonMode="true"
					 useHandCursor="true"
					 mouseChildren="false">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:Image source="{buttonIcon}"/>
	<mx:Label text="{buttonLabel}"/>
</legs:GlowButtonLegs>
